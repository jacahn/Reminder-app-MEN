<a href="/authors/new">New Author</a>
<!-- Iterates through each author -->
{{#each authors}}
  <div class="author">
    <div class="authorName"><a href="/authors/{{_id}}">{{name}}</a></div>
    <!-- For each author, it will iterate through their reminders -->
    {{#each reminders}}
      <p class="reminder">
        {{body}}
      </p>
    {{/each}}
  </div>
{{/each}}
